{
    "manifest_version": 3,
    "name": "Hamen's Privacy",
    "version": "1.0",
    "description": "Created by Daniel Hamen to ensure his privacy",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "webNavigation",
        "tabs",
        "notifications",
        "storage"
    ],
    "externally_connectable": {
        "matches": ["https://api.hamen.io/*"]
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "commands": {
        "open_extension": {
            "suggested_key": {
                "default": "Alt+Shift+L"
            },
            "description": "Opens the extension's popup"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}